<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
  <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:orientation="vertical">
        <EditText android:layout_width="fill_parent" android:id="@+id/editText" android:layout_height="wrap_content">
            <requestFocus></requestFocus>
        </EditText>
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content">
        <Button android:layout_width="fill_parent" android:text="Unique letters" android:id="@+id/uniqueButton" android:layout_weight="1" android:layout_height="wrap_content"></Button>
        <Button android:layout_weight="1" android:layout_width="fill_parent" android:text="Single spaces" android:id="@+id/singleButton" android:layout_height="wrap_content"></Button>
    </LinearLayout>
  </LinearLayout>

</LinearLayout>
